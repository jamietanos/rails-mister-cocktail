
<%= simple_form_for [@cocktail, @dose], url: cocktail_doses_path do |f| %>
  <%= f.input :ingredient, collection: Ingredient.all %>
  <%= f.input :description %>
  <%= f.button :submit, class: "btn btn-default btn-block text-center" %>

  <%= link_to "Back to all cocktails", cocktails_path, class: "btn btn-danger" %>
<% end %>

