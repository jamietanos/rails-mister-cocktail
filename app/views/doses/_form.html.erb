<%= simple_form_for([@cocktail, @dose]) do |form| %>
<%= form.error_notification %>
  <div class="form-inputs">
    <%= form.input :description %>
    <%= form.input :ingredient_id %>
    <%= form.hidden field :cocktail_id :value => @cocktail_id %>
  </div>

  <div class="form-actions">
    <%= form.button :submit, class: "btn-default" %>
  </div>
  <%= link_to "Back to all cocktails", cocktails_path, class: "btn btn-danger" %>
<% end %>
